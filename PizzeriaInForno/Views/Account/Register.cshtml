﻿@model PizzeriaInForno.Models.Utenti

@{
    ViewBag.Title = "Reg";
}

<h2 class="text-center mb-5 text-white">Registrazione</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container d-flex flex-column align-items-center">
        <div class="form-group text-center text-white mb-2">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group text-center text-white mb-2">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
        </div>

        <div class="form-group text-center text-white mb-2">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group text-center text-white mb-2">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.HiddenFor(model => model.Ruolo, new { Value = "User" })
        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-primary mt-4" />
        </div>
    </div>
}